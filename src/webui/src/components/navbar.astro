---
const { active } = Astro.props;
---

<!-- Horizontal Top Navigation -->
<nav class="fixed top-0 left-0 right-0 backdrop-blur-md bg-zinc-900/95 border-b border-zinc-800 z-[100] shadow-lg flex justify-start">
  <div class="flex items-center justify-start gap-3 sm:gap-4 px-3 sm:px-6 py-2 sm:py-3 w-full">
    <!-- Logo and Brand -->
    <div class="flex items-center gap-2 sm:gap-3 flex-shrink-0">
      <img class="h-6 sm:h-8 w-auto flex-shrink-0" src="{{base_path | safe}}/assets/favicon.svg" alt="OPM">
      <span class="text-lg sm:text-xl font-bold text-zinc-100 flex-shrink-0">OPM</span>
    </div>
    
    <!-- Horizontal Menu Items -->
    <div class="flex items-center gap-1 sm:gap-2 overflow-x-auto rounded-lg flex-1">
      <a 
        href="{{base_path | safe}}/" 
        aria-label="Process List"
        class={`${active == "list" ? 'bg-sky-600/20 text-sky-300' : 'hover:bg-zinc-800/50 text-zinc-400 hover:text-zinc-100'} flex items-center px-2 sm:px-4 py-2 text-xs sm:text-sm font-medium transition-all duration-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-sky-500 focus:ring-inset active:scale-95`}>
        <svg class="mr-1 sm:mr-2 h-4 sm:h-5 w-4 sm:w-5 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
        </svg>
        <span class="hidden sm:inline">Process List</span>
        <span class="inline sm:hidden" aria-hidden="true">List</span>
      </a>
      
      <a 
        href="{{base_path | safe}}/servers" 
        aria-label="Agents"
        class={`${active == "servers" ? 'bg-sky-600/20 text-sky-300' : 'hover:bg-zinc-800/50 text-zinc-400 hover:text-zinc-100'} flex items-center px-2 sm:px-4 py-2 text-xs sm:text-sm font-medium transition-all duration-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-sky-500 focus:ring-inset active:scale-95`}>
        <svg class="mr-1 sm:mr-2 h-4 sm:h-5 w-4 sm:w-5 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01" />
        </svg>
        Agents
      </a>
      
      <a 
        href="{{base_path | safe}}/notifications" 
        aria-label="Notifications"
        class={`${active == "notifications" ? 'bg-sky-600/20 text-sky-300' : 'hover:bg-zinc-800/50 text-zinc-400 hover:text-zinc-100'} flex items-center px-2 sm:px-4 py-2 text-xs sm:text-sm font-medium transition-all duration-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-sky-500 focus:ring-inset active:scale-95`}>
        <svg class="mr-1 sm:mr-2 h-4 sm:h-5 w-4 sm:w-5 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
        </svg>
        <span class="hidden sm:inline">Notifications</span>
        <span class="inline sm:hidden" aria-hidden="true">Notify</span>
      </a>
    </div>
  </div>
</nav>
